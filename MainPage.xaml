<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="VerticalStackLayout" x:Key="Background">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Red, Light=White}"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="70,0"
            Style="{StaticResource Background}"
            Spacing="50">
            
            <Label
                Text="P nta.me&#10;sta"
                Style="{StaticResource Headline}"
                TextColor="Black"
                SemanticProperties.HeadingLevel="Level1" />

            <Image Source="logo.png"/>

            <Image
                Source="dinosaurio.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Button
                x:Name="PlayGuest"
                Clicked="MoveToDrawPage"
                Text="Jugar como invitado" 
                SemanticProperties.Hint="Juega casi instantaneamente"
                HorizontalOptions="Fill" />

            <Button
                x:Name="Login"
                Text="Iniciar Sesión" 
                SemanticProperties.Hint="Iniciar sesión con un correo registrado"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

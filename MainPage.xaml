<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="VerticalStackLayout" x:Key="Background">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=White, Light=White}"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
            Padding="60,0"
            Style="{StaticResource Background}"
            Spacing="40">
            
            <HorizontalStackLayout Margin="30">
                <Label Text="P" FontSize="50" TextColor="Black" FontFamily="Jersey10"/>
                <Image
                    x:Name="logoImage"
                    Source="newlogo.png"
                    WidthRequest="70"
                    HeightRequest="70"
                    Rotation="75"
                    TranslationY="-130"
                    VerticalOptions="Center"/>
                <Label Text="nta.me&#10;sta" FontSize="50" TextColor="Black" FontFamily="Jersey10"/>
            </HorizontalStackLayout>

            <Image
                x:Name="dinoImage"
                Source="dinosaurio.png"
                HeightRequest="110"
                Aspect="AspectFit"
                HorizontalOptions="Start"
                Rotation="340" 
                TranslationX="-230"
                />

            <Button
                x:Name="PlayGuest"
                Clicked="GoToDrawPage"
                Text="Dibujar"
                FontFamily="Jersey10"
                FontSize="25"
                CornerRadius="25"
                BorderWidth="-100"
                HorizontalOptions="Fill">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#F23CF2" Offset="0.2" />
                                    <GradientStop Color="#D33FFE" Offset="0.4" />
                                    <GradientStop Color="#AD46FF" Offset="0.6" />
                                    <GradientStop Color="#7B4FFF" Offset="0.8" />
                                    <GradientStop Color="#0058FF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Button.Background>

                <Button.Shadow>
                    <Shadow
                        Brush="#80000000"
                        Offset="4,4"
                        Radius="5"
                        Opacity="0.6"
                        />
                </Button.Shadow>

            </Button>


            <Button
                 x:Name="CreateSession"
                 Clicked="CreateASession"
                 Text="Crear Sesión" 
                 FontFamily="Jersey10"
                 FontSize="25"
                 HorizontalOptions="Fill" 
                 BackgroundColor="#AAFFFFFF"
                />

            <Button
                x:Name="Join"
                Clicked="GoToJoin"
                Text="Unirse a una sesión"
                FontFamily="Jersey10"
                FontSize="25"
                HorizontalOptions="Fill" />

            <Button
                x:Name="Login"
                Text="Iniciar Sesión" 
                FontFamily="Jersey10"
                FontSize="25"
                Clicked="GoToLogin"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

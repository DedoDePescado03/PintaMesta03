<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="PintaMesta.DrawingPage">

    <VerticalStackLayout>
        <Label 
            FontSize="Large"
            Margin="-6"
            Text="Flores"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />

        <HorizontalStackLayout Padding="10">
            <mct:DrawingView
            x:Name="DrawBoard"
            BackgroundColor="LightGrey"
            IsMultiLineModeEnabled="True"
            WidthRequest="600"
            HeightRequest="260"
            HorizontalOptions="Center" />

            <Button
            x:Name="ClrBtn"
            WidthRequest="100"
            HeightRequest="35"
            BackgroundColor="Red"
            Text="Clear" 
            Clicked="ClearDrawingView"
            VerticalOptions="Start"
            HorizontalOptions="End"/>

            <Grid Padding="10" ColumnSpacing="10" RowSpacing="10" HorizontalOptions="Start" VerticalOptions="Start">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button BackgroundColor="Red" Clicked="ChangeColor" CommandParameter="Red" WidthRequest="30" HeightRequest="30" />
                <Button BackgroundColor="Green" Clicked="ChangeColor" CommandParameter="Green" WidthRequest="30" HeightRequest="30" />
                <Button BackgroundColor="Blue" Clicked="ChangeColor" CommandParameter="Blue" WidthRequest="30" HeightRequest="30" />
                <Button BackgroundColor="Yellow" Clicked="ChangeColor" CommandParameter="Yellow" WidthRequest="30" HeightRequest="30" />
                <Button BackgroundColor="Black" Clicked="ChangeColor" CommandParameter="Black" WidthRequest="30" HeightRequest="30" />
                <Button BackgroundColor="Purple" Clicked="ChangeColor" CommandParameter="Purple" WidthRequest="30" HeightRequest="30" />
            </Grid>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
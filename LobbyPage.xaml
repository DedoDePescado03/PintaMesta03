<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.LobbyPage"
             Title="Lobby"
             BackgroundColor="#F6F6E9"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem 
            Text="Salir" 
            Clicked="OnBackToolbarItemClicked" 
            Priority="0" 
            Order="Primary"/>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>

        <Label
            x:Name="SessionName"
            Text="Sesión de "
            FontFamily="Jersey10"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Label 
            x:Name="SessionCodeLabel"
            Text="El código de la sesión es: "
            FontFamily="Jersey10"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Jugadores:" FontAttributes="Bold" Margin="10,20,0,5" FontFamily="Jersey10"/>
        <CollectionView x:Name="PlayersListView" HeightRequest="300">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" FontSize="18" Margin="10,5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            x:Name="StartGame"
            FontFamily="Jersey10"
            Clicked="StartGameClicked"
            Text="Empezar"
            IsVisible="False"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
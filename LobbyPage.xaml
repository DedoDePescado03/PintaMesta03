<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.LobbyPage"
             Title="Lobby">
    <VerticalStackLayout>
        <Label
            x:Name="SessionName"
            Text="Sesión de "
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Label 
            x:Name="SessionCodeLabel"
            Text="El código de la sesión es: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Jugadores:" FontAttributes="Bold" Margin="10,20,0,5"/>
        <CollectionView x:Name="PlayersListView" HeightRequest="300">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}" FontSize="18" Margin="10,5"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
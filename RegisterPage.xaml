<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.RegisterPage"
             Title="Registrarse"
             BackgroundColor="White">

    <ScrollView>
        <Grid VerticalOptions="CenterAndExpand">
            <VerticalStackLayout
                Padding="30"
                Spacing="25"
                HorizontalOptions="Center"
                VerticalOptions="Center">

                <Label
                    Text="Usuario" 
                    FontFamily="Jersey10"
                    FontSize="25"
                    HorizontalOptions="Center"
                    TextColor="Black"
                />

                <Entry
                    x:Name="usernameRegister"
                    Placeholder="nombre de usuario"
                    FontSize="18"
                    WidthRequest="250"
                    BackgroundColor="#f0f0f0"
                    TextColor="Black"
                    HorizontalOptions="Center" />

                <Label
                    Text="Correo"
                    FontFamily="Jersey10"
                    FontSize="25"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    />

                <Entry
                    x:Name="emailRegister"
                    Placeholder="correo@example.com"
                    FontSize="18"
                    WidthRequest="250"
                    BackgroundColor="#f0f0f0"                    
                    TextColor="Black"
                    HorizontalOptions="Center" />

                <Label
                    Text="Contraseña"
                    FontFamily="Jersey10"
                    FontSize="25"                    
                    TextColor="Black"
                    HorizontalOptions="Center"/>

                <Entry
                    x:Name="passwordRegister"
                    Placeholder="••••••••"
                    FontSize="18"
                    IsPassword="True"
                    WidthRequest="250"
                    BackgroundColor="#f0f0f0"
                    HorizontalOptions="Center" />

                <Button
                    x:Name="registerBtn"
                    Text="Registrarse"
                    FontFamily="Jersey10"
                    FontSize="20"
                    BackgroundColor="#2196F3"
                    CornerRadius="10"
                    WidthRequest="200"
                    Margin="0,20"
                    Clicked="RegisterNewUser"                    
                    TextColor="Black"
                    HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.RegisterPage"
             Title="Registrarse">
    <VerticalStackLayout
        Padding="0,160">
        
        <Label
            Text="Usuario" 
            HorizontalOptions="Center"/>

        <HorizontalStackLayout Padding="100,10,0,0">

            <Entry
                x:Name="usernameRegister"
                WidthRequest="170"
                HorizontalOptions="Center"/>

        </HorizontalStackLayout>

        <Label
                Text="Correo"
                HorizontalOptions="Center"/>

        <HorizontalStackLayout Padding="100,10,0,0">

            <Entry
                x:Name="emailRegister"
                WidthRequest="170"
                VerticalOptions="Center"/>

        </HorizontalStackLayout>

        <Label
            Text="ContraseÃ±a"
            HorizontalOptions="Center"/>

        <HorizontalStackLayout Padding="100,10,0,0">

                <Entry
                x:Name="passwordRegister"
                WidthRequest="170"
                VerticalOptions="Center"/>

        </HorizontalStackLayout>

        <Button
            x:Name="registerBtn"
            Clicked="RegisterNewUser"
            Margin="0,20"
            HorizontalOptions="Center"
            Text="Registrarse" />

    </VerticalStackLayout>
</ContentPage>
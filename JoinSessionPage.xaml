<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PintaMesta.JoinSessionPage"
             Title="Unirse A Una Sesión"
             BackgroundColor="#F6F6E9"
             >
    <VerticalStackLayout Padding="0,200">
        <Label 
            Text="Ingresa el código de la sesión"
            FontFamily="Jersey10"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            x:Name="SessionCode"
            WidthRequest="170"
            TextColor="Black"
            FontFamily="Jersey10"
            HorizontalOptions="Center" />

        <Button Margin="10"
            x:Name="Unirse"
            Text="Unirse"
            TextColor="Black"
            FontFamily="Jersey10"
            Clicked="JoinASession"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>